<%= form_for @product do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_field :description %><br>
  <%= f.label :price %><br>
  <%= f.text_field :price %><br>
  <%= f.label :image %><br>
  <%= f.text_field :image %><br>
  <%= f.hidden_field(:user_id, :value => current_user.id) %><br>
  <%= f.submit %>
<% end %>
